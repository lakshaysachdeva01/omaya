<script>
function filterIndustry(filter, updateURL = true) {
    const industryTabs = document.querySelectorAll('.industry-tab');
    const portfolioItems = document.querySelectorAll('.event-grid > div');
    
    // Update URL with query parameter
    if (updateURL) {
        const url = new URL(window.location);
        if (filter === 'all') {
            url.searchParams.delete('tab');
        } else {
            url.searchParams.set('tab', filter);
        }
        window.history.pushState({}, '', url);
    }
    
    // Update active button
    industryTabs.forEach(tab => {
        if (tab.getAttribute('data-filter') === filter) {
            tab.classList.add('active');
            tab.style.background = 'var(--primary-color)';
            tab.style.borderColor = 'var(--primary-color)';
            tab.style.color = 'white';
        } else {
            tab.classList.remove('active');
            tab.style.background = 'white';
            tab.style.borderColor = '#e9ecef';
            tab.style.color = '#6c757d';
        }
    });
    
    // Filter items
    portfolioItems.forEach(item => {
        if (filter === 'all') {
            // Show all items
            item.classList.remove('filter-hidden');
        } else {
            // Show/hide based on filter
            if (item.classList.contains(filter)) {
                item.classList.remove('filter-hidden');
            } else {
                item.classList.add('filter-hidden');
            }
        }
    });
}

// Check URL on page load and apply filter
document.addEventListener('DOMContentLoaded', function() {
    const urlParams = new URLSearchParams(window.location.search);
    const tab = urlParams.get('tab');
    
    if (tab && (tab === 'steel-industry' || tab === 'power-plants')) {
        filterIndustry(tab, false);
    } else {
        filterIndustry('all', false);
    }
});
</script>

