      .enquiry-modal-content {
        padding: 30px 20px;
        width: 95%;
        max-height: 85vh;
      }
  
  
      .btn-enquire{
    max-width: 100%;
  }
  
  
      .enquiry-modal-close {
        top: 10px;
        right: 10px;
        width: 35px;
        height: 35px;
        font-size: 24px;
      }
    }
  </style>
  
  
  
  <section class="product-detail-container">
    <div class="container">
      <div class="row">
        <!-- Left Column - Product Images (Sticky on Desktop) -->
        <div class="col-md-7 product-left-column">
          <div class="product-main-image-container popup-trigger" data-type="image" data-src="<%= product && product.arrays && product.arrays.arrayOne && product.arrays.arrayOne.length > 0 ? S3_BASE_URL + product.arrays.arrayOne[0] : '' %>" id="mainImageContainer" style="<%= product && product.arrays && product.arrays.arrayOne && product.arrays.arrayOne.length > 0 ? 'cursor: pointer;' : '' %>">
            <% if (product && product.arrays && product.arrays.arrayOne && product.arrays.arrayOne.length > 0) { %>
              <img 
                src="<%= S3_BASE_URL + product.arrays.arrayOne[0] %>" 
                alt="<%= product.title || 'Product Image' %>"
                class="product-main-image"
                id="mainImage"
              >
            <% } else { %>
              <div class="no-image-placeholder">
                <i class="fa-solid fa-image"></i>
                                   </div>
            <% } %>
                          </div>
                          
          <!-- Thumbnails -->
          <% if (product && product.arrays && product.arrays.arrayOne && product.arrays.arrayOne.length > 0) { %>
            <div class="thumbnail-container">
              <div class="thumbnail-wrapper">
                <% product.arrays.arrayOne.forEach((image, index) => { %>
                  <div class="thumbnail-item popup-trigger <%= index === 0 ? 'active' : '' %>" data-type="image" data-src="<%= S3_BASE_URL + image %>" data-index="<%= index %>" onclick="changeMainImage(this.getAttribute('data-src'), this.getAttribute('data-index'))">
                    <img src="<%= S3_BASE_URL + image %>" alt="Thumbnail <%= index + 1 %>">
                                              </div>
                <% }) %>
                                              </div>
                                          </div>
          <% } %>
                                      </div>
                              
        <!-- Right Column - Product Info -->
        <div class="col-md-5">
          <div class="product-info-section">
            <!-- Mobile Header (visible only on mobile) -->
            
  
            <!-- Category -->
            <div class="product-category">
              <% if (product && product.category && product.category.name) { %>
                <%= product.category.name %>
              <% } else { %>
                Product
              <% } %>
                                  </div>
                              
            <!-- Product Title -->
            <h1 class="product-title"><%= product?.title || 'Product Name' %></h1>
  
            <!-- Price -->
            <% if (product && product.sellingPrice) { %>
              <div class="product-price-section">
                <span class="product-price">â‚¹<%= product.sellingPrice.toLocaleString() %></span>
                <% if (product.unit) { %>
                  <span class="product-unit">Per <%= product.unit %></span>
                <% } %>
              </div>
            <% } %>
  
            <!-- Description -->
            <div class="product-section">
              <h2 class="product-section-title">Description</h2>
              <div class="product-description blog-description">
                <%- product.description ? product.description.replace(/<span[^>]*>/g, '').replace(/<\/span>/g, '').replace(/\n/g, '<br>') : 'No description available.' %>
              </div>
              <script>
                  document.addEventListener('DOMContentLoaded', function() {
                    const blogDescription = document.querySelector('.blog-description');
                    
                    if (blogDescription) {
                      const content = blogDescription.innerHTML || '';
                      
                      // Check if content contains encoded table tags
                      if (content.includes('&lt;table')) {
                        try {
                          // First, preserve the non-table content
                          const parts = content.split(/(&lt;table[\s\S]*?&lt;\/table&gt;)/);
                          
                          let finalContent = '';
                          parts.forEach(part => {
                            if (part.includes('&lt;table')) {
                              // Decode table HTML
                              const tempDiv = document.createElement('div');
                              tempDiv.innerHTML = part;
                              let decodedTable = tempDiv.textContent;
                              
                              // Clean up only the table HTML
                              decodedTable = decodedTable
                                .replace(/<\/?p>/g, '') // Remove <p> and </p> tags
                                .replace(/&nbsp;/g, '') // Remove &nbsp;
                                .replace(/\s+</g, '<')  // Remove whitespace before tags
                                .replace(/>\s+/g, '>')  // Remove whitespace after tags
                                .trim();
                              
                              finalContent += decodedTable;
                            } else {
                              // Keep non-table content as is (preserves <p> tags and <br>)
                              finalContent += part;
                            }
                          });
                          
                          // Replace the content
                          blogDescription.innerHTML = finalContent;
                          
                          // Wrap tables in scrollable container
                          const tables = blogDescription.querySelectorAll('table');
                          tables.forEach(table => {
                            const wrapper = document.createElement('div');
                            wrapper.className = 'table-scroll-wrapper';
                            table.parentNode.insertBefore(wrapper, table);
                            wrapper.appendChild(table);
                          });
                        } catch (error) {
                          console.error('Error processing table HTML:', error);
                        }
                      }
                    }
                  });
                </script>
                
                <!-- Enquire Buttons -->
                <div class="product-action-buttons" style="margin-top: 30px; display: flex; gap: 15px; flex-wrap: wrap;">
                  <button  class="btn-enquire" onclick="openEnquiryModal()">
                    <i class="fa-solid fa-paper-plane"></i> Enquire Now
                  </button>
                                 
                              </div>
                          
                          </div>
                          
          
       
          </div>
        </div>
      </div>
                          </div>
  </section>
  
 
                  
  <script>

  
    // Image switching functionality
    let currentImageIndex = 0;
    let touchStartX = 0;
    let touchEndX = 0;
  
    function changeMainImage(imageSrc, index) {
      const mainImage = document.getElementById('mainImage');
      if (mainImage) {
        mainImage.src = imageSrc;
        currentImageIndex = index;
        
        // Update active thumbnail
        document.querySelectorAll('.thumbnail-item').forEach((thumb, i) => {
          if (i === index) {
            thumb.classList.add('active');
          } else {
            thumb.classList.remove('active');
          }
        });
      }
    }
  
    // Touch swipe functionality for mobile
    const mainImageContainer = document.getElementById('mainImageContainer');
    if (mainImageContainer) {
      mainImageContainer.addEventListener('touchstart', (e) => {
        touchStartX = e.changedTouches[0].screenX;
      });
  
      mainImageContainer.addEventListener('touchend', (e) => {
        touchEndX = e.changedTouches[0].screenX;
        handleSwipe();
      });
    }
  
    function handleSwipe() {
      const thumbnails = document.querySelectorAll('.thumbnail-item');
      const totalImages = thumbnails.length;
      
      if (touchEndX < touchStartX - 50) {
        // Swipe left - next image
        currentImageIndex = (currentImageIndex + 1) % totalImages;
        thumbnails[currentImageIndex].click();
      }
      
      if (touchEndX > touchStartX + 50) {
        // Swipe right - previous image
        currentImageIndex = (currentImageIndex - 1 + totalImages) % totalImages;
        thumbnails[currentImageIndex].click();
      }
    }
  </script>