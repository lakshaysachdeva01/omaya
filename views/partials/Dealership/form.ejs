
<!-- Dealership Form Section -->
<section id="dealershipForm" class="pt-40 pb-40">
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-12 col-lg-8 offset-lg-2">
        <div class="heading text-center mb-50">
          <span class="heading__subtitle">Partner With Us</span>
          <h2 class="heading__title">Become a Dealer</h2>
          <p class="heading__desc">Join our network of trusted dealers and grow your business with quality products and dedicated support.</p>
        </div>

        <div class="request__form">
          <div class="request__form-body">
            <form id="dealershipEnquiryForm">
              <div class="row">
                <div class="col-sm-6 col-md-6 col-lg-6">
                  <div class="form-group">
                    <input 
                      type="text" 
                      class="form-control" 
                      name="<%= DEALERSHIP_ENQUIRY_DYNAMIC_FIELDS_KEYS.NAME %>" 
                      placeholder="Your Name*" 
                      required>
                  </div>
                </div>

                <div class="col-sm-6 col-md-6 col-lg-6">
                  <div class="form-group">
                    <input 
                      type="email" 
                      class="form-control" 
                      name="<%= DEALERSHIP_ENQUIRY_DYNAMIC_FIELDS_KEYS.EMAIL %>" 
                      placeholder="Email Address*" 
                      pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$"
                      title="Please enter a valid email address"
                      required>
                  </div>
                </div>

                <div class="col-sm-6 col-md-6 col-lg-6">
                  <div class="form-group">
                    <input 
                      type="tel" 
                      class="form-control" 
                      name="<%= DEALERSHIP_ENQUIRY_DYNAMIC_FIELDS_KEYS.CONTACT_NUMBER %>" 
                      placeholder="Contact Number*" 
                      pattern="[0-9]{10}"
                      title="Please enter a valid 10-digit phone number"
                      maxlength="10"
                      required>
                  </div>
                </div>

                <div class="col-sm-6 col-md-6 col-lg-6">
                  <div class="form-group">
                    <input 
                      type="text" 
                      class="form-control" 
                      name="<%= DEALERSHIP_ENQUIRY_DYNAMIC_FIELDS_KEYS.FIRM_NAME %>" 
                      placeholder="Firm Name*" 
                      required>
                  </div>
                </div>

                <div class="col-sm-12 col-md-12 col-lg-12">
                  <div class="form-group">
                    <input 
                      type="text" 
                      class="form-control" 
                      name="<%= DEALERSHIP_ENQUIRY_DYNAMIC_FIELDS_KEYS.ADDRESS %>" 
                      placeholder="Address*" 
                      required>
                  </div>
                </div>

                <div class="col-sm-12 col-md-12 col-lg-12">
                  <div class="form-group">
                    <textarea 
                      class="form-control" 
                      name="<%= DEALERSHIP_ENQUIRY_DYNAMIC_FIELDS_KEYS.MESSAGE %>" 
                      placeholder="Your Message" 
                      rows="5"></textarea>
                  </div>
                </div>

                <div class="col-sm-12 col-md-12 col-lg-12 text-center">
                  <button class="btn btn__secondary" type="submit" id="dealershipSubmitBtn">
                    <span id="dealershipBtnText">Submit Enquiry</span>
                    <span class="submit-loader" id="dealershipSubmitLoader" style="display: none;">
                      <svg width="20" height="20" viewBox="0 0 38 38" xmlns="http://www.w3.org/2000/svg" stroke="#fff">
                        <g fill="none" fill-rule="evenodd">
                          <g transform="translate(1 1)" stroke-width="2">
                            <circle stroke-opacity=".5" cx="18" cy="18" r="18"/>
                            <path d="M36 18c0-9.94-8.06-18-18-18">
                              <animateTransform
                                attributeName="transform"
                                type="rotate"
                                from="0 18 18"
                                to="360 18 18"
                                dur="1s"
                                repeatCount="indefinite"/>
                            </path>
                          </g>
                        </g>
                      </svg>
                    </span>
                  </button>
                </div>
              </div>
            </form>
            <p class="form-messege mt-3 text-center"></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Submit Loader Styles */
  .btn__secondary {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
  }

  .submit-loader {
    display: none;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }

  /* Form Validation Styles */
  .form-control:invalid:not(:placeholder-shown) {
    border-color: #dc3545;
  }

  .form-control:valid:not(:placeholder-shown) {
    border-color: #28a745;
  }
</style>

