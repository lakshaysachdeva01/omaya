<style>
    .stay-booking-form {
        position: relative;
        z-index: 9;
    }
    
    .stay-booking-form .form-label {
        display: block;
        margin-bottom: 8px;
        font-weight: 500;
        color: #222222;
        font-size: 16px;
    }
    
    .stay-booking-form .form-control {
        width: 100%;
        height: 54px;
        color: #222222;
        font-size: 16px;
        padding: 0 30px;
        border: 1px solid #adadad;
        background: #fff;
        border-radius: 0;
    }
    
    .stay-booking-form .form-control:focus {
        border-color: #adadad;
        outline: none;
        box-shadow: none;
    }
    
    .stay-booking-form .form-control[readonly] {
        background-color: #fff !important;
        cursor: pointer;
    }
    
    .stay-booking-form textarea.form-control {
        min-height: 100px;
        resize: vertical;
        padding-top: 20px;
        padding-bottom: 20px;
        height: auto;
    }
    
    .stay-booking-form .date-input-wrapper {
        position: relative;
    }
    
    .stay-booking-form .date-input-wrapper .form-control {
        padding-right: 60px;
        cursor: pointer;
    }
    
    .stay-booking-form .date-input-wrapper::after {
        content: '\f073';
        font-family: 'Font Awesome 5 Free';
        font-weight: 900;
        position: absolute;
        right: 30px;
        top: 50%;
        transform: translateY(-50%);
        color: var(--theme-color1);
        pointer-events: none;
    }
    
    .stay-booking-form .form-row {
        display: flex;
        gap: 15px;
        margin-bottom: 15px;
    }
    
    .stay-booking-form .form-row .form-group {
        flex: 1;
    }
    
    .stay-booking-form .form-submit {
        margin-top: 23px;
    }
    
    .stay-booking-form .form-submit button,
    .stay-booking-form button[type="submit"] {
        background-color: #222222;
        color: #fff;
        font-size: 16px;
        text-transform: uppercase;
        font-family: var(--text-font2);
        letter-spacing: 2px;
        width: 100%;
        height: 54px;
        line-height: 54px;
        border: 0;
        position: relative;
        z-index: 9;
        padding: 0;
    }
    
    .stay-booking-form .form-submit button:before,
    .stay-booking-form button[type="submit"]:before {
        position: absolute;
        left: 0;
        top: 0;
        height: 100%;
        width: 100%;
        content: "";
        background-color: var(--bg-theme-color1);
        border-radius: inherit;
        transform: scale(0, 1);
        z-index: -1;
        transform-origin: top right;
        transition: transform 500ms cubic-bezier(0.86, 0, 0.07, 1);
    }
    
    .stay-booking-form .form-submit button:hover:before,
    .stay-booking-form button[type="submit"]:hover:before {
        transform: scale(1, 1);
        transform-origin: bottom left;
    }
    
    @media (max-width: 767px) {
        .stay-booking-form .form-row {
            flex-direction: column;
            gap: 0;
        }
    }
</style>

<div class="stay-booking-form">
   
    <form id="stayBookingForm" method="post">
        <!-- Name and Phone Row -->
        <div class="form-row">
            <div class="form-group">
                <label class="form-label">Name</label>
                <input name="fullName" class="form-control" type="text" placeholder="Enter Full Name" required>
            </div>
            <div class="form-group">
                <label class="form-label">Phone</label>
                <input name="mobileNumber" class="form-control" type="tel" placeholder="Enter Mobile Number" required pattern="[0-9]{10}" title="Please enter a valid 10-digit phone number" maxlength="10" minlength="10" oninput="this.value = this.value.replace(/[^0-9]/g, '').slice(0, 10);">
            </div>
        </div>
        
        <!-- Email and Room Name Row -->
        <div class="form-row">
            <div class="form-group">
                <label class="form-label">Email</label>
                <input name="email" class="form-control required email" type="email" placeholder="Enter Email" required>
            </div>
            <div class="form-group">
                <label class="form-label">Room Name</label>
                <input type="text" name="roomName" id="roomName" class="form-control" readonly value="<%= typeof currentItem !== 'undefined' && currentItem && currentItem.title ? currentItem.title : '' %>">
            </div>
        </div>
        
        <!-- Check-in and Check-out Row -->
        <div class="form-row">
            <div class="form-group">
                <label class="form-label">Check-in</label>
                <div class="date-input-wrapper">
                    <input type="text" name="checkinDate" id="checkinDate" class="form-control" placeholder="Select Check-in Date" required readonly>
                </div>
            </div>
            <div class="form-group">
                <label class="form-label">Check-out</label>
                <div class="date-input-wrapper">
                    <input type="text" name="checkoutDate" id="checkoutDate" class="form-control" placeholder="Select Check-out Date" required readonly>
                </div>
            </div>
        </div>
        
        <!-- Number of Guests and Number of Kids Row -->
        <div class="form-row">
            <div class="form-group">
                <label class="form-label">No. of Guests</label>
                <div class="custom-dropdown" id="stayGuestsDropdown">
                    <div class="custom-dropdown-selected">
                        <span class="selected-text">Select Guests</span>
                    </div>
                    <div class="custom-dropdown-options">
                        <div class="dropdown-option" data-value="1" data-title="1 Guest">1 Guest</div>
                        <div class="dropdown-option" data-value="2" data-title="2 Guests">2 Guests</div>
                        <div class="dropdown-option" data-value="3" data-title="3 Guests">3 Guests</div>
                        <div class="dropdown-option" data-value="4" data-title="4 Guests">4 Guests</div>
                        <div class="dropdown-option" data-value="5" data-title="5 Guests">5 Guests</div>
                        <div class="dropdown-option" data-value="6" data-title="6 Guests">6 Guests</div>
                        <div class="dropdown-option" data-value="7" data-title="7 Guests">7 Guests</div>
                        <div class="dropdown-option" data-value="8" data-title="8 Guests">8 Guests</div>
                    </div>
                </div>
                <input type="hidden" name="numberOfGuests" id="numberOfGuestsHidden" required>
            </div>
            <div class="form-group">
                <label class="form-label">No. of Kids</label>
                <div class="custom-dropdown" id="stayKidsDropdown">
                    <div class="custom-dropdown-selected">
                        <span class="selected-text">0 Kids</span>
                    </div>
                    <div class="custom-dropdown-options">
                        <div class="dropdown-option" data-value="0" data-title="0 Kids">0 Kids</div>
                        <div class="dropdown-option" data-value="1" data-title="1 Kid">1 Kid</div>
                        <div class="dropdown-option" data-value="2" data-title="2 Kids">2 Kids</div>
                        <div class="dropdown-option" data-value="3" data-title="3 Kids">3 Kids</div>
                        <div class="dropdown-option" data-value="4" data-title="4 Kids">4 Kids</div>
                    </div>
                </div>
                <input type="hidden" name="kids" id="kidsHidden" required value="0">
            </div>
        </div>
        
        <!-- Remarks Row -->
        <div class="mb-3">
            <label class="form-label">Remarks</label>
            <textarea name="remarks" class="form-control" rows="2" placeholder="Enter any special requests or remarks"></textarea>
        </div>
        
        <input type="hidden" name="typeOfRoom" id="typeOfRoom" value="">
        
        <div class="mb-0">
            <input name="form_botcheck" class="form-control" type="hidden" value="">
            <button type="submit" class="theme-btn btn-style-one" data-loading-text="Please wait...">
                <span class="btn-title">Book Now</span>
            </button>
        </div>
    </form>
</div>

