<style>
	.page-title {
		position: relative;
	}
	
	.page-title::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-color: rgba(0, 0, 0, 0.5);
		z-index: 1;
	}
	
	.page-title .auto-container {
		position: relative;
		z-index: 2;
	}
	
	.contact-details .row {
		align-items: flex-start;
	}
	
	.contact-details__left {
		background: #fff;
		padding: 40px 30px;
	}
	
	.contact-details__right {
		background: #f8f6f3;
		padding: 40px 30px;
		border-top: 1px solid #d3bf77;
	}
	
	.contact-details__info {
		margin-top: 30px;
	}
	
	.contact-details__info li {
		margin-bottom: 30px;
		display: flex;
		align-items: flex-start;
	}
	
	.contact-details__info li:last-child {
		margin-bottom: 0;
	}
	
	.contact-details__info li .icon {
		width: 45px;
		height: 45px;
		min-width: 10px;
		border-radius: 50%;
		background: #f8f6f3;
		display: flex;
		align-items: center;
		justify-content: center;
		margin-right: 20px;
		flex-shrink: 0;
		transition: all 0.3s ease;
	}
	
	.contact-details__info .icon:hover {
		background: #d3bf77;
		transform: scale(1.1);
	}
	
	.contact-details__info .icon img {
		width: 22px;
		height: 22px;
		transition: all 0.3s ease;
		/* Change SVG color to #aa8453 using CSS filter */
		filter: brightness(0) saturate(100%) invert(60%) sepia(25%) saturate(800%) hue-rotate(350deg) brightness(95%) contrast(90%);
	}
	
	.contact-details__info .icon:hover img {
		/* Change to white on hover */
		filter: brightness(0) invert(1);
	}
	
	.contact-details__info .text h6 {
		margin-bottom: 8px;
		font-size: 18px;
		font-weight: 600;
		color: #333;
	}
	
	.contact-details__info .text a {
		color: #666;
		text-decoration: none;
		font-size: 14px;
		line-height: 1.6;
		transition: color 0.2s ease;
	}
	
	.contact-details__info .text a:hover {
		color: #aa8453;
	}

	/* Ensure only hovered link changes color (override theme li:hover rule) */
	.contact-details__left .contact-details__info .text a {
		color: #666 !important;
	}
	.contact-details__left .contact-details__info .text a:hover {
		color: #a26c26 !important;
	}
	
	.contact-details__right .form-label {
		display: block;
		margin-bottom: 8px;
		font-weight: 500;
		color: #222222;
		font-size: 16px;
	}
	
	.contact-details__right .form-control {
		width: 100%;
		height: 54px;
		color: #222222;
		font-size: 16px;
		padding: 0 30px;
		border: 1px solid #adadad;
		background: #fff;
		border-radius: 0;
	}
	
	.contact-details__right textarea.form-control {
		min-height: 100px;
		resize: vertical;
		padding-top: 20px;
		padding-bottom: 20px;
		height: auto;
		background: #fff !important;
		background-color: #fff !important;
	}
	
	.contact-details__right .form-control:focus {
		border-color: #adadad;
		outline: none;
		box-shadow: none;
	}
	
	.contact-details__right button[type="submit"],
	.contact-details__right .theme-btn {
		background-color: #222222;
		color: #fff;
		font-size: 16px;
		text-transform: uppercase;
		font-family: var(--text-font2);
		letter-spacing: 2px;
		width: 100%;
			height: 54px;
		line-height: 54px;
		border: 0;
		position: relative;
		z-index: 9;
		padding: 0;
	}
	
	.contact-details__right button[type="submit"]:before,
	.contact-details__right .theme-btn:before {
		position: absolute;
		left: 0;
		top: 0;
		height: 100%;
		width: 100%;
		content: "";
		background-color: var(--bg-theme-color1);
		border-radius: inherit;
		transform: scale(0, 1);
		z-index: -1;
		transform-origin: top right;
		transition: transform 500ms cubic-bezier(0.86, 0, 0.07, 1);
	}
	
	.contact-details__right button[type="submit"]:hover:before,
	.contact-details__right .theme-btn:hover:before {
		transform: scale(1, 1);
		transform-origin: bottom left;
	}
	
	@media (max-width: 991.98px) {
		.contact-details__left,
		.contact-details__right {
			margin-bottom: 30px;
		}
	}

	@media (max-width: 640px) {
		.contact-details .row>* {
			padding: 0 !important;
		}
	}
</style>

