<%
    // Function to map facility names to icon files
    function getFacilityIcon(featureName) {
        const name = featureName.toLowerCase();
        
        // Climate & Air
        if (name.includes('air condition') || name.includes('climate') || name.includes('air conditioning') || name.includes('centralized ac')) return 'air-conditioner.png';
        
        // Connectivity
        if (name.includes('wifi') || name.includes('internet') || name.includes('wireless') || name.includes('high-speed')) return 'wifi.png';
        
        // Accessibility
        if (name.includes('disability') || name.includes('accessible') || name.includes('wheelchair') || name.includes('disabled friendly')) return 'disability.png';
        
        // Water
        if (name.includes('water') || name.includes('hot') || name.includes('cold')) return 'toilet.png';
        
        // Parking
        if (name.includes('parking') || name.includes('valet')) return 'valet-parking.png';
        
        // Elevator/Lift
        if (name.includes('lift') || name.includes('elevator')) return 'apartment.png';
        
        // Power & Backup
        if (name.includes('generator') || name.includes('power backup') || name.includes('dg power') || name.includes('dg generator')) return 'electric-generator.png';
        
        // Security
        if (name.includes('security') || name.includes('camera') || name.includes('fire') || name.includes('extinguishing')) return 'shield.png';
        
        // Access Control
        if (name.includes('key') || name.includes('electronic') || name.includes('access')) return 'locker.png';
        
        // Laundry
        if (name.includes('laundry') || name.includes('dry cleaning')) return 'ironing-board.png';
        
        // Fitness
        if (name.includes('fitness') || name.includes('gym') || name.includes('center')) return 'weight-loss.png';
        
        // Room Service
        if (name.includes('room service') || name.includes('service')) return 'apartment.png';
        
        // Business
        if (name.includes('business') || name.includes('center')) return 'office-building.png';
        
        // Default icon
        return 'apartment.png';
    }
    
    // Services data
    const services = [
        {
            title: 'Centralized AC',
            description: 'Enjoy climate-controlled comfort throughout the property.'
        },
        {
            title: 'Internet WiFi',
            description: 'Stay connected with high-speed internet access.'
        },
        {
            title: 'Phy. Disabled Friendly',
            description: 'Facilities designed for physically disabled guests.'
        },
        {
            title: '24x7 Hot & Cold Water',
            description: 'Continuous supply of hot and cold water around the clock.'
        },
        {
            title: 'Ample Parking',
            description: 'Ample parking space for over 100 + cars.'
        },
        {
            title: 'Valet Parking',
            description: 'Convenient valet parking service available.'
        },
        {
            title: 'Lift',
            description: 'Elevator with a capacity of 16 persons for guest use'
        },
        {
            title: 'DG Generator',
            description: 'Backup power with a total capacity of 520 kVA.'
        },
        {
            title: 'Fire Extinguishing System',
            description: 'Comprehensive fire extinguishing system for safety.'
        },
        {
            title: '24x7 Security and Camera',
            description: 'Round-the-clock security with surveillance cameras.'
        },
        {
            title: 'Electronic Key Access',
            description: 'Secure electronic key access for all rooms.'
        },
        {
            title: 'Laundry and Dry Cleaning',
            description: 'Professional laundry and dry cleaning services.'
        },
        {
            title: 'Fitness Center',
            description: 'State-of-the-art fitness center with modern equipment.'
        },
        {
            title: '24x7 Room Service',
            description: 'Around-the-clock room service for your convenience.'
        },
        {
            title: 'Business Center',
            description: 'A fully equipped business center catering to all your professional needs.'
        }
    ];
%>

<!-- service section two -->
<section class="service-section-two">
    <div class="auto-container">
        <div class="sec-title text-center wow fadeInUp">
            <span class="sub-title">Hotel Services</span>
            <h2>Hotel Facilities</h2>
        </div>
        <div class="row">
            <% services.forEach((service, index) => { %>
                <!-- service-block -->
                <div class="service-block-two col-lg-4 col-sm-6">
                    <div  style="height: 248px;" class="inner-box wow fadeInLeft" data-wow-delay="<%= (index * 100) %>ms">
                        <div class="image-box">
                            <div class="icon-box wow fadeInUp">
                                <img src="/assets/images/svg/<%= getFacilityIcon(service.title) %>" alt="<%= service.title %>" class="service-icon">
                            </div>
                            <h4 class="title"><a href="#"><%= service.title %></a></h4>
                        </div>
                        <div class="content-box">
                            <div class="text"><%= service.description %></div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</section>
<!-- End service section -->

<style>
    .service-section-two .image-box {
        background-image: none;
    }
    
    .service-section-two .icon-box {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 20px;
    }
    
    .service-section-two .service-icon {
        width: 60px;
        height: 60px;
        object-fit: contain;
        /* Default color - gold/brown theme color */
        filter: brightness(0) saturate(100%) invert(60%) sepia(25%) saturate(800%) hue-rotate(350deg) brightness(95%) contrast(90%);
        transition: filter 0.3s ease;
    }
    
    /* On card hover, make icon white */
    .service-section-two .inner-box:hover .service-icon {
        filter: brightness(0) invert(1); /* Makes icon white */
    }
</style>
