

      	<!-- Start main-content -->
	<section class="page-title" style="background-image: url(/assets/images/data/RCP00288.webp); background-position: center;">
		<div class="auto-container">
			<div class="title-outer text-center">
				<h1 class="title">Join Our Team</h1>
				<ul class="page-breadcrumb">
					<li><a href="/">Home</a></li>
					<li>Jobs</li>
				</ul>
			</div>
		</div>
	</section>




    <section id="news" class="news-section-two">
        <div class="auto-container">
         
          <div class="row"> 
            <% if (jobs && jobs.length > 0) { %>
             
                <% jobs.forEach((job, index) => { %>
                
                <!-- News Block -->
                <div class="news-block-two col-lg-4 col-sm-6 wow fadeInUp">
                  <div class="inner-box wow fadeInLeft">
                    
                    <div class="content-box">
                      <p class="job-category" style="font-size: 12px; color: #A1a1a1; margin: 0 0 4px 0; font-weight: 400; text-transform: uppercase; letter-spacing: 2px; font-family: 'Barlow Condensed', sans-serif;">
                        <%= (job.category && typeof job.category === 'object' ? job.category.name : job.category) || job.jobPosition || 'General' %>
                      </p>
                      <h4 class="title" style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; text-overflow: ellipsis; min-height: 2.6em; ">
                        <a href="/job/<%= job.seoDetails && job.seoDetails.slug ? job.seoDetails.slug : (job._id || '') %>"><%= job.jobTitle || job.title || job.jobPosition || 'Job Title' %></a>
                      </h4>
                      <div class="desc" style="font-family: 'Barlow', sans-serif; display: -webkit-box; -webkit-line-clamp: 5; -webkit-box-orient: vertical; overflow: hidden; text-overflow: ellipsis; margin-bottom: 25px; font-size: 15px;"><%- job.jobDescription[0].description %></div>
                      <div class="btn-box" >

                        <a  style="padding: 12px 0; " href="/job/<%= job.seoDetails && job.seoDetails.slug ? job.seoDetails.slug : (job._id || '') %>"  >Read More<i class="fa-solid fa-arrow-right" style="margin-left: 10px;  font-size:16px ; color: #8b7355;"></i></a>
                      </div>
                    </div>
                  </div>
                </div>
              <% }) %>
            <% } %>
          </div>
        </div>
      </section>
    
   





  
        <style>
.desc h3,.desc h1,.desc h2,.desc h4,.desc h5,.desc h6,.desc p, .desc ul, .desc ol, .desc li{
    font-size: 16px; font-family: "Barlow", sans-serif; font-weight: 400; color: #666666; margin-bottom: 0; line-height: 28px;
}

            .job-listing-section {
                background-color: #fff;
                min-height: 60vh;
            }

            .job-list-container {
                padding: 40px 50px;
            }

            .job-list-item {
                padding: 30px 0;
            }

            .job-content-wrapper {
                display: flex;
                justify-content: space-between;
                align-items: center;
                gap: 30px;
            }

            .job-info {
                flex: 1;
            }

            .job-title {
                font-size: 36px;
                font-weight: 600;
                color: #3a3a3a;
                margin: 0 0 8px 0;
                line-height: 1.4;
            }

            .job-category {
                font-size: 16px;
                color: #8b7355;
                margin: 0;
                font-weight: 400;
            }

            .job-action {
                flex-shrink: 0;
            }

            .job-divider {
                border: none;
                border-top: 2px dashed #e0e0e0;
                margin: 0;
            }

            @media (max-width: 768px) {
                .job-list-container {
                    padding: 30px 20px;
                }

                .job-content-wrapper {
                    flex-direction: column;
                    align-items: flex-start;
                    gap: 20px;
                }

                .job-action {
                    width: 100%;
                }

                .job-action .theme-btn {
                    width: 100%;
                    text-align: center;
                }

                .job-title {
                    font-size: 28px;
                }
            }
        </style>
              